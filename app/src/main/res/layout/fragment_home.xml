<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <!-- TODO: Update blank fragment layout -->

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="412dp"
        android:layout_height="74dp"
        android:layout_gravity="clip_vertical|center_horizontal|fill_horizontal|fill_vertical|end"
        android:background="#FFFFFF"
        android:gravity="center|center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/home_menu"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/menu2_svgrepo_com" />

        <Space
            android:layout_width="270dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/home_profile"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/user_circle_svgrepo_com" />
    </TableRow>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical" />

            <EditText
                android:id="@+id/home_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:autoText="true"
                android:background="#E4E4E4"
                android:ems="10"
                android:gravity="center|center_horizontal"
                android:hint="Search"
                android:inputType="textPersonName"
                android:padding="15dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColorHighlight="#FFFFFF"
                android:textSize="16sp" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarThumbHorizontal="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp">

                    <Button
                        android:id="@+id/home_option_wh"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="#A393BF "
                        android:fontFamily="@font/poppins_extrabold"
                        android:text="Working Hours"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/home_option_bp"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="#453750"
                        android:fontFamily="@font/poppins_extrabold"
                        android:text="Business Plans"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/home_option_c"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="12dp"
                        android:backgroundTint="#A393BF "
                        android:fontFamily="@font/poppins_extrabold"
                        android:text="Your Courses"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textSize="20sp" />
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:scrollbarThumbHorizontal="@color/white"
                android:scrollbarTrackHorizontal="@color/white">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="#453750 "
                        android:fontFamily="@font/poppins"
                        android:text="Newsfeeds"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:fontFamily="@font/poppins"
                        android:text="Competitions"
                        android:textAllCaps="false"
                        android:textColor="#453750"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:fontFamily="@font/poppins"
                        android:text="Podcasts"
                        android:textAllCaps="false"
                        android:textColor="#453750"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:fontFamily="@font/poppins"
                        android:text="Marketing"
                        android:textAllCaps="false"
                        android:textColor="#453750"
                        android:textSize="14sp"/>

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="6dp"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:fontFamily="@font/poppins"
                        android:text="Newsfeeds"
                        android:textAllCaps="false"
                        android:textColor="#453750"
                        android:textSize="14sp" />
                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/home_image_button_2"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F6F6F6"
                android:backgroundTintMode="add"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Articles &amp; Books"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textDirection="firstStrongRtl"
                android:textSize="26sp" />

            <Button
                android:id="@+id/home_image_button_bottom"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F6F6F6"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Articles &amp; Books"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textDirection="firstStrongRtl"
                android:textSize="26sp"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>